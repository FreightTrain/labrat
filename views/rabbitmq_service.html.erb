<!doctype html>
<html>
  <head>
    <title>
      Service information
    </title>
  </head>

  <body>
    <% results.each do |r| %>
    <article>
      <% if e = r[:exception] %>
      <div class="error">
        Connection <%= uri %> raised an exception:
        <p>
          <%= e.message %>
        </p>
      </div>
      <% else %>
        <div class="success">
          <%= partial r[:proto], :result => r %>
        </div>
      <% end %>
    </article>
    <% end %>
  </body>
</html>
